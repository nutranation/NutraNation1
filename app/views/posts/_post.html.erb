<tr>
		<% @content_type = 'Post' %>
		<td class = '<%= @content_type %>'id = "<%=  post.id %>">
		
			<%= Vote.count(@content_type, post.id) %> Score
		</td>
  <td class="gravatar">
    <%= image_tag(post.user.display_image, :alt => "profile",  :width => "50px", :height => "50px") %>  
  </td>
  <td class="post">
	<% if @unique %>
		<span class="title" style = "font-size: 120%"><strong><%= wrap(post.title)%></strong></span><br>
	<% else %>
    	<span class="title" style = "font-size: 120%"><%= link_to wrap(post.title), post %></span><br>
	<% end %>
	<% if post.content %>
   		<span class "post"><%= wrap(post.content) %><span>
	<% end %>
	<% if @tags %>
		<br><%= render :partial => 'shared/tag', :collection => @tags %></span>
	<% end %>
    <span class="timestamp">
      <%= link_to post.user.name, post.user %> posted <%= time_ago_in_words(post.created_at) %> ago.
    </span>
  </td>
  <% if current_user?(post.user) %>
    <td>
      <%= link_to "delete", post, :method => :delete,
                                       :confirm => "You sure?",
                                       :title => post.title %>
    </td>
	<% else %>
		<td>
			<%= render :partial => 'shared/vote_form', :object => post %>
		</td>
  <% end %>
</tr>