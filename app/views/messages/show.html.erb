<% if current_user == @message.sender || current_user == @message.receiver %>
	Sent By:<%= link_to @message.sender.name, user_path(@message.sender) %><br>
	Subject: <%=  @message.subject %><br>
	<% if @message.body %>
		Body: <%= @message.body %>
	<% end %>
<% else %>
	Please sign in. You do not have permission to read this message. 
<% end %>
