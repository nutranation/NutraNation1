<header>
 <%= link_to logo, root_path %>
  <nav class="round">
    <ul>
      <li><%= link_to "Home", root_path %></li>
      <% if user_signed_in? %>
				<li><%= link_to "Tags", tags_path %></li>
        <li><%= link_to "Profile", current_user %></li>
        <li><%= link_to "Users", users_path %></li>
        <li><%= link_to "Settings", edit_user_registration_path %></li>
        <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete%></li>
      <% else %>
        <li><%= link_to "Sign in", new_user_session_path %></li>
      <% end %>
    </ul>
		<% if user_signed_in? %>
			<%= render 'shared/search' %>
		<%= link_to "Unseen Messages: #{current_user.unread_messages}", "/messages/#{current_user.id}/inbox"%><br>
			<div id = 'count'>
				
				
				Unseen Notifications: <%=  current_user.notification_unseen %> </div>
				<%= button_to "show", {:action => "seen", :controller=>"/notifications"}, :remote => true %>
				
			
			<div id = 'notifications'>
				<%= render :partial => 'shared/notification', :collection => current_user.notifications %>
			</div>
		<% end %>
		
  </nav>
</header>
